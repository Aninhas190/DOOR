<div class="container centered">
    <h4>Your curated list of restaurants</h4>
    <p> The list of restaurants that can fullfill your dietary requirements.</p>
    <div id="map-container"></div>
</div>


  <div class="list-container">
    <div class="row d-flex justify-content-around mb-5">
    {{#each restaurants}}
      <div class="col-sm-12 col-md-4 col-lg-2">
        <div class="card" style="width:18rem;">
            <a href="{{_id}}"><img src="{{image}}" alt="image" style="width:20rem;"/></a>
              <div class ="card-body">
                <h4 class="card-title"> <a href="{{_id}}">{{name}}</a> </h4>
                <p class="card-text">{{cuisineType}}</p>
              </div>
        </div>
      </div>
    {{/each}}
  </div>

</div>  

    {{> listrestaurants}}   

    {{> mapscript}}