<div class="container centered">
  <h4>All the restaurants</h4>
  <section>
    <div id="map-container"></div>
  </section>

<div class="list-container">
  <div class="row d-flex justify-content-around flex-wrap">
    {{#each restaurants}}
    <div class="col-sm-12 col-md-4 col-lg-3 m-2">
      <div class="card" style="width:18rem;">
          <a href="{{_id}}"><img src="{{image}}" alt="image" style="width:20rem;"/></a>
            <div class ="card-body">
              <h4 class="card-title"> <a href="{{_id}}">{{name}}</a> </h4>
              <p class="card-text">{{cuisineType}}</p>
            </div>
      </div>
    </div>
    {{/each}}
  </div>

  </div>
</div>

{{> listrestaurants}}
{{> mapscript}}