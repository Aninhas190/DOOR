<form action="/authentication/sign-up" method="POST">
  <label for="user-type">Type of user</label>

  <select name="userType" id="user-type" required>
    <option value="">Select one</option>
    <option value="restaurantOwner">Restaurant Owner</option>
    <option value="foodie">Foodie</option>
  </select>

  <label for="input-name">Name</label>
  <input type="text" id="input-name" name="name" required placeholder="Your Name" />

  <label for="input-email">Email</label>
  <input type="email" id="input-email" name="email" required placeholder="Your Email" />

  <label for="input-password">Password</label>
  <input type="password" name="password" id="input-password" required placeholder="A Strong Password" />

  <button>Sign up</button>

</form>
